{
  "name": "git-guardian",
  "version": "1.0.0",
  "description": "Safe, intelligent Git workflow for AI-assisted coding with enterprise-grade safety guardrails",
  "author": {
    "name": "Javier Martinez",
    "email": "javiermrcom@gmail.com",
    "url": "https://github.com/javiermrcom"
  },
  "repository": "https://github.com/javiermrcom/awesome-claude-code",
  "license": "MIT",
  "keywords": [
    "git",
    "safety",
    "workflow",
    "commits",
    "pull-requests",
    "conventional-commits",
    "linear",
    "sentry",
    "security",
    "guardrails"
  ],
  "commands": [
    "./commands/commit.md",
    "./commands/pr.md",
    "./commands/branch-name.md",
    "./commands/git-status.md"
  ],
  "agents": [
    "./agents/reviewer.md"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/git_safety.py"
          }
        ]
      }
    ]
  }
}
